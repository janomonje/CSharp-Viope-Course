/*
  Write a C# program which asks the userâ€™s age and then prints out if the user is eligible to cast his/her own vote. 
  The age limit for casting a vote is 18.
*/


using System;
namespace chaper_5
{
	class Program
	{
	  static void Main()
	  {
	 int age = 0;

				Console.WriteLine("Please input your age: ");
				age = Int32.Parse(Console.ReadLine());

				if (age >= 18)
				{
					Console.WriteLine("You can cast your vote!");
				}
	  }
	}
}
